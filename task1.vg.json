{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title": "Percentage of People with Access to Electricity Per Continent ",

 
    "params": 
    [
        {
            "name": "year",
            "value": 2019,
            "bind":
            {
                "input": "range",
                "min": 2000,
                "max": 2019,
                "step": 1,
                "name": "Year"
            }
        }
    ],


    "data": 
    {
        "url":"Data/share-of-the-population-with-access-to-electricity - copy.csv"
    
    },
    
    "transform": 
    [
        {"filter": "datum.Year == year"},
        
        {"filter": 
            {
                
                "field": "Entity", "oneOf":["Europe","North America", "South America", "Asia", "Africa", "Oceania"]

            }
            
        },

        {
            "calculate": "'The lowest share region is: ' - datum['Year']",

            "as": "annotation"
        }

    ],

    "layer": 
    [
        {
                      
        "mark": "bar",


            "encoding": 
            {

                "x": 
                {
                    "field": "Entity",
                    "type": "nominal",
                    "title": "Continent"
                },

                "y":
                {
                    "field": "access",
                    "type": "quantitative",
                    "scale": 
                    {
                        "domain": [0, 100]
                    },
                    "title": "Percentage of Population"
                },
                "color": 
                {
                    "field": "Entity",
                    "type": "nominal",
                    "scale":
                    {
                        "domain": 
                        [
                            "Europe",
                            "North America",
                            "South America",
                            "Asia",
                            "Africa",
                            "Oceania"
                        ],

                        "range": 
                        [
                            "#984ea3",
                            "#e41a1c",
                            "#ff7f00",
                            "#a65628",
                            "#377eb8",
                            "#a6cee3"
                        ]
                    },
                    "title": "Continents"
                },
            
                "tooltip":
                [
                    {"field": "Entity","title": "Region","type": "nominal"},
                    {"field": "access","title": "Share Percentage", "type": "quantitative", "format": ".4"}
                ]
            }
        },

        {

        "mark": 
        {       
            "type": "text",
            "dx": -220,
            "dy": -220
        },


        "encoding": 
            {
                "text":
                {
                    "field": "Year",
                    "type": "nominal"
                }
            }
        }

    ]


}



    